# ===========================================
# DooTask AI 智能体插件 - 环境配置
# 复制此文件为 .env 并填入实际配置值
# ===========================================

# 🚀 应用基础配置
NODE_ENV=development
APP_NAME="DooTask AI Agent"
APP_VERSION=1.0.0
API_KEY=

# 🔌 服务端口配置
APP_PORT=3000
GO_SERVICE_PORT=8080
PYTHON_AI_SERVICE_PORT=8001

# 🗄️ 数据库配置
POSTGRES_HOST=ai-agent-postgres
POSTGRES_PORT=5432
POSTGRES_SSLMODE=disable

# 🔗 DooTask 集成配置
DOOTASK_API_BASE_URL=http://nginx
DOOTASK_API_USER_TOKEN=

# 🤖 AI 配置
AI_BASE_URL=
AI_REQUEST_TIMEOUT=300           # 秒
AI_STREAM_INTERVAL=100          # 毫秒

# 🌐 前端配置
NEXT_OUTPUT_MODE=                # 输出模式
NEXT_PUBLIC_BASE_PATH=           # 基础路径
NEXT_PUBLIC_API_BASE_URL=

# 📁 文件上传配置
UPLOAD_MAX_SIZE=10485760         # 10MB
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,md,xlsx,xls

# 📊 开发环境配置
LOG_LEVEL=info
ENABLE_DEBUG=false
ENABLE_SWAGGER=false

# 🐍 Python 配置
DEFAULT_MODEL=fake
DATABASE_TYPE=postgres
POSTGRES_MIN_CONNECTIONS_PER_POOL=1
POSTGRES_MAX_CONNECTIONS_PER_POOL= 10

# 🔒 生产环境注意事项
# 在生产环境中请确保：
# 1. DOOTASK_API_BASE_URL 地址改为 http://nginx 即可
# 2. DOOTASK_API_USER_TOKEN 保持留空
# 3. AI_BASE_URL 保持留空
# 4. 根据环境配置 NEXT_OUTPUT_MODE, NEXT_PUBLIC_BASE_PATH, NEXT_PUBLIC_API_BASE_URL 
# 5. 将 ENABLE_DEBUG 设为 false
# 6. 将 ENABLE_SWAGGER 设为 false
# 7. 把DATABASE_TYPE=postgres打开
# 8. 将REDIS_HOST, REDIS_PORT, REDIS_DB 注释