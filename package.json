{
  "name": "dootask-ai-agent",
  "version": "0.1.0",
  "private": true,
  "description": "DooTask AI 智能体插件 - 基于 LangChain 和 MCP 协议的企业级 AI 助手系统",
  "author": "DooTask Team",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quick-start": "./scripts/quick-start.sh",
    "db:up": "docker compose -f docker/docker-compose.dev.yml up -d postgres redis",
    "db:down": "docker compose -f docker/docker-compose.dev.yml down",
    "db:reset": "docker compose -f docker/docker-compose.dev.yml down -v && docker compose -f docker/docker-compose.dev.yml up -d postgres redis && sleep 10 && docker exec -i dootask-ai-postgres psql -U dootask -d dootask_ai < scripts/init.sql",
    "logs:go": "docker logs -f dootask-ai-go-service",
    "logs:python": "docker logs -f dootask-ai-python-ai",
    "logs:db": "docker logs -f dootask-ai-postgres",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
