# DooTask AI 智能体插件 - 环境变量配置
# 复制此文件为 .env 并填入实际配置值

# 应用基础配置
NODE_ENV=development
APP_NAME="DooTask AI Agent"
APP_VERSION=1.0.0
APP_PORT=3000

# 后端服务配置
GO_SERVICE_PORT=8080
PYTHON_AI_SERVICE_PORT=8001

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dootask_ai
DB_USER=dootask
DB_PASSWORD=dootask123
DB_SSL_MODE=disable

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# OpenAI 配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000

# DooTask 集成配置
DOOTASK_API_BASE_URL=http://localhost:7001
DOOTASK_API_TOKEN=your-dootask-api-token
DOOTASK_WEBHOOK_SECRET=your-webhook-secret-token

# MCP 工具配置
# Google 搜索
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CX=your-custom-search-engine-id

# 天气 API
WEATHER_API_KEY=your-weather-api-key

# 文件上传配置
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,md,xlsx,xls

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_AUDIT_LOG=true

# 安全配置
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000  # 15分钟

# 开发模式配置
ENABLE_DEBUG=false
ENABLE_SWAGGER=true

# 生产环境配置
# 在生产环境中请确保修改以下配置
# - JWT_SECRET: 使用更强的密钥
# - DB_PASSWORD: 使用更安全的密码
# - 所有 API 密钥使用真实值
# - 关闭调试和开发工具 