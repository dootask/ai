# ===========================================
# DooTask AI 智能体插件 - 环境配置
# 复制此文件为 .env 并填入实际配置值
# ===========================================

# 🚀 应用基础配置
NODE_ENV=development
APP_NAME="DooTask AI Agent"
APP_VERSION=1.0.0

# 🔌 服务端口配置
APP_PORT=3000
GO_SERVICE_PORT=8080
PYTHON_AI_SERVICE_PORT=8001

# 🗄️ 数据库配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dootask_ai
POSTGRES_USER=dootask
POSTGRES_PASSWORD=dootask123
POSTGRES_SSLMODE=disable

# 🧊 Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 🔗 DooTask 集成配置
DOOTASK_API_BASE_URL=http://localhost:2222
DOOTASK_API_USER_TOKEN=

# 🤖 AI配置
AI_BASE_URL=
AI_REQUEST_TIMEOUT=60           # 秒
AI_STREAM_INTERVAL=100          # 毫秒

# 🌐 前端配置
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/api

# 📁 文件上传配置
UPLOAD_MAX_SIZE=10485760         # 10MB
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,md,xlsx,xls

# 📊 开发环境配置
LOG_LEVEL=info
ENABLE_DEBUG=true
ENABLE_SWAGGER=true

# 🔒 生产环境注意事项
# 在生产环境中请确保：
# 1. DOOTASK_API_BASE_URL 地址改为 http://nginx 即可
# 2. DOOTASK_API_USER_TOKEN 保持留空
# 3. AI_BASE_URL 保持留空
# 4. 将 ENABLE_DEBUG 设为 false
# 5. 将 ENABLE_SWAGGER 设为 false

# py配置
USE_FAKE_MODEL=true
DEFAULT_MODEL=fake
